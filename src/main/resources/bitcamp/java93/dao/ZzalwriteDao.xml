  <insert id="insert" parameterType="zzal">
    insert into zzal_lect(zzno, mno, cno, cono, titl, pic, cdt) 
    values(#{zzno}, #{mno}, #{cno}, Case When #{cono} = 0 then null else #{cono} end, #{title}, #{mainPic}, curdate())
  </insert>
  
